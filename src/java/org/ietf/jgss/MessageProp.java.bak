package org.ietf.jgss;

public class MessageProp {

    private boolean privState;
    private int qop;
    private boolean minStatus;
    private String  minStatusString;
    private boolean duplicate;
    private boolean old;
    private boolean unseq;
    private boolean gap;

    public MessageProp(boolean privState) {
        this.privState = privState;
    }

    public MessageProp(int qop, boolean privState) {
        this.qop = qop;
        this.privState = privState;
    }

    public int getQOP() {
        return this.qop;
    }

    public boolean getPrivacy() {
        return this.privState;
    }

    public boolean getMinorStatus() {
        return this.minStatus;
    }

    /**
     * returns a string explaining the mechanism-specific error code.
     * 'null' will be returned when no error code has been set.
     */
    public String getMinorString() {
        return this.minStatusString;
    }

    public void setQOP(int qopVal) {
        this.qop = qopVal;
    }

    // Sets the privacy state.
    public void setPrivacy(boolean privState) {
        this.privState = privState;
    }

    //  Returns "true" if this is a duplicate of an earlier token.
    public boolean isDuplicateToken() {
        return this.duplicate;
    }

    // Returns "true" if the token's validity period has expired.
    public boolean isOldToken() {
        return this.old;
    }

    // Returns "true" if a later token has already been processed.
    public boolean isUnseqToken() {
        return this.unseq;
    }

    // Returns "true" if an expected per-message token was not recieved.
    public boolean isGapToken() {
        return this.gap;
    }

    public void setSupplementaryStates(boolean duplicate, boolean old,
            boolean unseq, boolean gap, int minorStatus, String minorString) {
        // TODO
        return;
    }

}
